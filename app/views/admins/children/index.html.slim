.container
  .row
    section.admin-page
              h3.midashi.txt_size_l.admin-page__midashi
                | 児童名簿
              table.table.table_theme_simple border="1"
                caption.txt_size_m
                  | 年度
                thead.table__thead_theme_simple
                  tr
                    th
                      | 学年
                    th
                      | クラス
                    th
                      | 児童名
                    th
                      | 性別
                    th
                      | 詳細
                  - @children.each do |child|
                    tbody.table__tbody_theme_simple

                      tr
                        td
                          = child.grade
                          | 年
                        td
                          = child.school_class
                          | 組
                        td
                          = child.full_name
                        td
                          = child.gender
                        td
                          = link_to '詳細', admins_child_path(child.id)

              .text-center
                = paginate @children, class: "paginate"
